{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/aladia/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/aladia/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/aladia",
  "projects": {
    "aladia": {
      "type": "application",
      "root": "apps/aladia",
      "entryFile": "main",
      "sourceRoot": "apps/aladia/src",
      "compilerOptions": {
        "tsConfigPath": "apps/aladia/tsconfig.app.json"
      }
    },
    "authentication": {
      "type": "application",
      "root": "apps/authentication",
      "entryFile": "main",
      "sourceRoot": "apps/authentication/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authentication/tsconfig.app.json"
      }
    },
    "common/config": {
      "type": "library",
      "root": "common/config",
      "entryFile": "index",
      "sourceRoot": "common/config/src",
      "compilerOptions": {
        "tsConfigPath": "common/config/tsconfig.lib.json"
      }
    },
    "common/core": {
      "type": "library",
      "root": "common/core",
      "entryFile": "index",
      "sourceRoot": "common/core/src",
      "compilerOptions": {
        "tsConfigPath": "common/core/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    }
  }
}
